<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yanzhen.dao.ExchangeMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.yanzhen.model.Exchange">
                    <id column="id" property="id"/>
                    <result column="user_id" property="userId"/>
                    <result column="start_time" property="startTime"/>
                    <result column="end_time" property="endTime"/>
                    <result column="status" property="status"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id, user_id, start_time, end_time, status
        </sql>
    
    <resultMap id="queryExchangeAllMap" type="com.yanzhen.model.Exchange" extends="BaseResultMap">
         <association property="user" javaType="com.yanzhen.model.User">
             <id column="id" property="id"></id>
             <result column="username" property="username"></result>
             <result column="tel" property="tel"></result>
             <result column="job_title" property="jobTitle"></result>
         </association>

    </resultMap>


    <select id="queryExchangeAll" parameterType="com.yanzhen.model.Exchange" resultMap="queryExchangeAllMap">
      select ex.*,u.username,u.tel,u.job_title
      from exchange ex LEFT JOIN user u on u.id=ex.user_id
      <where>
          <if test="user!=null">
              <if test="user.username!=null and user.username!=''">
                      and u.username like '%${user.username}%'
              </if>
          </if>
          <if test="status!=null">
               and ex.status =#{status}
          </if>
          <if test="userId!=null">
              and user_id =#{userId}
          </if>
      </where>
    </select>

</mapper>